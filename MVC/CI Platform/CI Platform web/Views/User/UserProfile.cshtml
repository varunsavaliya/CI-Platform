@{
    Layout = "_HeaderLayout";
}


<div class="container mt-lg-5 mt-md-2 mt-2">
    <form method="post">
        <div class="row gap-3">
            <!-- User profile image, name and reset password -->
            <div class="col-lg-3 col-md-12 p-5 p-md-2 d-flex flex-column justify-content-center align-items-center border user-profile">
                <div class="user-image-wrapper">
                    <img src="~/images/volunteer1.png" alt="user-image" class="mb-2 user-image" />
                    <div class="edit-icon"><i class="fas fa-pencil-alt"></i></div>
                    <!-- File input element -->
                    <input type="file" id="profile-image-input" class="d-none" />
                </div>
                <span class="user-name mb-1">Evan Donohue</span>
                <span class="change-password" data-bs-toggle="modal" data-bs-target="#change-password">Change Password</span>

                <div class="modal fade" id="change-password" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content">
                            <div class="modal-body px-5">
                                <form class="formcontent my-0">
                                    @*<div asp-validation-summary="All" class="text-danger"></div>*@
                                    <div class="mb-3 mt-3">
                                        <label class="formlabels" for="oldpassword">Old Password</label>
                                        <input type="password" class="form-control old-password" id="oldPassword" for="oldPassword" placeholder="Enter old password" name="oldpassword">
                                        @*<span asp-validation-for="password" class="text-danger"></span>*@
                                    </div>
                                    <div class="mb-3 mt-3">
                                        <label class="formlabels" for="newpassword">New Password</label>
                                        <input type="password" class="form-control new-password" id="newPassword" for="newPassword" placeholder="Enter new password" name="newpassword">
                                        @*<span asp-validation-for="ConfirmPassword" class="text-danger"></span>*@
                                    </div>
                                    <button type="button" class="btn mt-3 loginbtn">Change Password</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>


            </div>
            <div class="col-lg-9 col-md-12 row form-container">
                <div class="border-bottom mb-3 pb-2 basic-info">
                    <span class="pb-2">
                        Basic Information
                    </span>
                </div>
                <div class="col-md-6 col-sm-12 mb-3">
                    <label for="Name" class="form-label">Name*</label>
                    <input for="Name" name="Name" type="text" class="form-control" id="name" aria-describedby="Name" placeholder="Enter your name">
                    @*<span id="storyTitleValidation" class="text-danger"></span>*@
                </div>
                <div class="col-md-6 col-sm-12 mb-3">
                    <label for="Surname" class="form-label">Surname*</label>
                    <input for="Surname" name="Surname" type="text" class="form-control" id="surname" aria-describedby="Surname" placeholder="Enter your surname">
                    @*<span id="storyTitleValidation" class="text-danger"></span>*@
                </div>
                <div class="col-md-6 col-sm-12 mb-3">
                    <label for="employeeId" class="form-label">Employee Id</label>
                    <input for="employeeId" name="employeeId" type="text" class="form-control" id="employeeId" aria-describedby="employeeId" placeholder="Enter your employee id">
                    @*<span id="storyTitleValidation" class="text-danger"></span>*@
                </div>
                <div class="col-md-6 col-sm-12 mb-3">
                    <label for="Manager" class="form-label">Manager</label>
                    <input for="Manager" name="Manager" type="text" class="form-control" id="Manager" aria-describedby="Manager" placeholder="Enter your manager details">
                    @*<span id="storyTitleValidation" class="text-danger"></span>*@
                </div>
                <div class="col-md-6 col-sm-12 mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input for="title" name="title" type="text" class="form-control" id="title" aria-describedby="title" placeholder="Enter title">
                    @*<span id="storyTitleValidation" class="text-danger"></span>*@
                </div>
                <div class="col-md-6 col-sm-12 mb-3">
                    <label for="department" class="form-label">Department</label>
                    <input for="department" name="department" type="text" class="form-control" id="department" aria-describedby="department" placeholder="Enter department name">
                    @*<span id="storyTitleValidation" class="text-danger"></span>*@
                </div>
                <div class="col-12 mb-3">
                    <label for="MyProfile" class="form-label">My Profile*</label>
                    <textarea for="MyProfile" name="MyProfile" class="form-control" id="MyProfile" aria-describedby="MyProfile" rows="3" placeholder="Enter your comments..."></textarea>
                    @*<span id="storyTitleValidation" class="text-danger"></span>*@
                </div>
                <div class="col-12 mb-3">
                    <label for="whyIVolunteer" class="form-label">Why I Volunteer?</label>
                    <textarea for="whyIVolunteer" name="whyIVolunteer" class="form-control" id="whyIVolunteer" aria-describedby="whyIVolunteer" rows="3" placeholder="Enter your comments..."></textarea>
                    @*<span id="storyTitleValidation" class="text-danger"></span>*@
                </div>


                <div class="border-bottom mb-3 pb-2 basic-info  mt-4">
                    <span class="pb-2">
                        Address Information
                    </span>
                </div>
                <div class="col-md-6 col-sm-12 mb-3">
                    <label for="City" class="form-label">City</label>
                    <input for="City" name="City" type="text" class="form-control" id="City" aria-describedby="City" placeholder="Enter your city">
                    @*<span id="storyTitleValidation" class="text-danger"></span>*@
                </div>
                <div class="col-md-6 col-sm-12 mb-3">
                    <label for="Country" class="form-label">Country*</label>
                    <select class="form-select" aria-label="Country">
                        <option selected>Select your country</option>
                        <option value="1">One</option>
                        <option value="2">Two</option>
                        <option value="3">Three</option>
                    </select>
                    @*<span id="storyTitleValidation" class="text-danger"></span>*@
                </div>



                <div class="border-bottom mb-3 pb-2 basic-info  mt-4">
                    <span class="pb-2">
                        Professional Information
                    </span>
                </div>
                <div class="col-md-6 col-sm-12 mb-3">
                    <label for="Availablity" class="form-label">Availablity</label>
                    <select class="form-select" aria-label="Availablity">
                        <option selected>Select your availablity</option>
                        <option value="1">One</option>
                        <option value="2">Two</option>
                        <option value="3">Three</option>
                    </select>
                    @*<span id="storyTitleValidation" class="text-danger"></span>*@
                </div>
                <div class="col-md-6 col-sm-12 mb-3">
                    <label for="LinkedIn" class="form-label">LinkedIn</label>
                    <input for="LinkedIn" name="LinkedIn" type="text" class="form-control" id="LinkedIn" aria-describedby="LinkedIn" placeholder="Enter linkedIn URL">
                    @*<span id="storyTitleValidation" class="text-danger"></span>*@
                </div>



                <div class="border-bottom mb-3 pb-2 basic-info  mt-4">
                    <span class="pb-2">
                        My Skills
                    </span>
                </div>
                <div class="col-12 mb-3">
                    <button type="button" class="btn btn-outline-secondary skill-btn" data-bs-toggle="modal" data-bs-target="#add-skill">Add Skills</button>



                    <div class="modal fade" id="add-skill" tabindex="-1" aria-labelledby="add-skill" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered">
                            <div class="modal-content">
                                <div class="modal-body px-5">
                                    <div class="skill-heading d-flex justify-content-between">
                                        <h3 class="d-inline">Add your Skills</h3>
                                        <button type="button" class="btn-close text-end" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="skill-options">
                                        <div class="form-check">
                                            <input class="form-check-input d-none" type="checkbox" id="check1" value="option1">
                                            <label class="form-check-label" for="check1">Option 1</label>
                                        </div>

                                        <div class="form-check">
                                            <input class="form-check-input d-none" type="checkbox" id="check2" value="option2">
                                            <label class="form-check-label" for="check2">Option 2</label>
                                        </div>
                                    </div>
                                    <div class="d-block">
                                        <button type="button" class="btn btn-outline-secondary skill-btn" data-bs-dismiss="modal">Close</button>
                                        <button type="button" class="card-button">Save</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-12 mb-3 text-end">
                    <button id="Save-btn" class="card-button mt-0">Save</button>
                </div>

            </div>

        </div>
    </form>
</div>

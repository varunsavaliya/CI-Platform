@{
    Layout = "_headerLayout";
    ViewData["Title"] = "Share Stories";
}
<div class="sharestory">
    <div class="container">
        <h1 class="mt-3 ssheading">Share Your Story</h1>
        <form action="#" method="post">
            <div class="row mt-3">
                <div class="col-lg-4 col-md-6 mb-3">

                    <label for="mission" class="form-label">Select Mission</label>
                    <select class="form-select mb-3" aria-label="mission">
                        <option selected>select your mission</option>
                        <option value="1">One</option>
                        <option value="2">Two</option>
                        <option value="3">Three</option>
                    </select>

                </div>
                <div class="col-lg-4 col-md-6 mb-3">

                    <label for="storyTitle" class="form-label"> My Story Title</label>
                    <input type="text" class="form-control" id="storyTitle" aria-describedby="storyTitle">


                </div>
                <div class="col-lg-4 col-md-6 mb-3">

                    <label for="date" class="form-label">Date</label>
                    <input type="date" class="form-control" id="date" aria-describedby="date">


                </div>
            </div>


            @*------------------------------------textarea---------------------------------------------*@
            <div class="formattingbox">
                <p>My Story</p>
                <div class="wsyig"></div>



            </div>


            @*------------------------------------rest section--------------------------------------------*@

            <div class="mb-3 mt-3">
                <label for="url" class="form-label">Enter Video URL</label>
                <input type="url" class="form-control" id="url" aria-describedby="url">

            </div>

            @*-----------------------------------upload section---------------------------------------------*@



            <div class="upload pb-3">
                <p class="mb-0">Upload your photos</p>
                <input type="file" class="d-none" accept=".jpg,.png, .jpeg" multiple id="drag-drop-btn" />
                <label class="drag-drop mb-4" for="drag-drop-btn">
                    <img src="~/images/drag-and-drop.png" />
                </label>
                <span id="file-chosen"></span>
                <div class="ssbuttons d-flex align-items-center">
                <button class="btn btn-outline-secondary">Cancel</button>
                <div class="d-flex align-items-center">
                    <button type="button" class="card-button mt-0">Save</button>
                    <button type="submit" class="card-button mt-0">Submit</button>
                </div>
                </div>
            </div>
        </form>
        <script>
            const actualBtn = document.getElementById('drag-drop-btn');

            const fileChosen = document.getElementById('file-chosen');
            actualBtn.addEventListener('change', function(){
              fileChosen.innerText = this.files[0].name;
                console.log(this.files[0]);
            })
        </script>
    </div>
</div>
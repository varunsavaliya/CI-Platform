    //var UserId = 12;
    var UserId = ViewBag.UserId;
    UserId = long.Parse(UserId);
    long totalCards = ViewBag.totalRecords;
}

<script>
    if (localStorage.getItem('view') == 0) {
    $('#GridView').show();
    $('#ListView').hide();
    }
    else {
    $('#ListView').show();
    $('#GridView').hide();
    }
</script>

<p id="total-records" class="d-none" data-totalCard="@totalCards">@totalCards</p>

@model CI_Platform.Entities.ViewModels.StoriesListingModel

<p id="total-stories" class="d-none">@ViewBag.totalRecords</p>
@foreach(var story in Model.StoriesList){
        <div class="col-12 col-md-6 col-lg-4">
            <div class="card story-card">
                <div class="card-image">
                    <img src="~/images/Grow-Trees-On-the-path-to-environment-sustainability.png" alt="Card Image">
                    <button type="button" class="btn sl-card-btn btn-outline-light rounded-pill hero-btn px-4 py-2">View Details &nbsp;<i class="bi bi-arrow-right"></i></button>
                    <!-- story capsule -->
                    <div class="mission-theme">
                        <h3>@story.Mission.Theme.Title</h3>
                    </div>
                </div>

                <!-- card content -->
                <div class="card-content">
                    <h2 class="card-title">@story.Title</h2>
                    <p class="card-description">@story.Description</p>
                    @*image and name*@
                    <div class="d-flex story-creator justify-content-start align-items-center">
                        <img src="~/images/volunteer1.png" class="me-3"/>
                        <span>@story.User.FirstName @story.User.LastName</span>
                    </div>
                </div>
            </div>
        </div>
        }
                    </a>
                    <ul class="dropdown-menu" id="skillDropdown">
                        @foreach (var skill in Model.Skill)
                        {
                            <li class="ms-4 form-check">
                                <input type="checkbox" value="@skill.SkillId" class="form-check-input" id="skill_@skill.SkillId" name="skillCheckboxes" multiple>
                                <label class="form-check-label" for="skill_@skill.SkillId">@skill.SkillName</label>
                            </li>
                        }
                    </ul>
                </div>
                <!-- </li> -->
                <!-- </ul> -->
                <!-- </div> -->

            </div>
        </div>



}
<div class="container">
    <div class="search-bar d-flex justify-content-between">
        <div class="search-field">
            <img src="~/images/search.png" alt="">
            <input type="text" placeholder="Search mission...">
        </div>
        <button class="navbar-toggler filter-icon" type="button" data-bs-toggle="offcanvas" aria-controls="offcanvasExample" href="#filters">
            <img class="navbar-toggler-icon" src="~/images/filter.png" />
        </button>

        <div class="offcanvas offcanvas-start" tabindex="-1" id="filters" aria-labelledby="topmenulabel">
            <div class="offcanvas-header">
                <h5 class="offcanvas-title" id="offcanvasExampleLabel">Filters</h5>
                <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
            </div>
            <div class="offcanvas-body">
                <div class="dropdown border-bottom">
                    <a class="text-decoration-none" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        Country
                        <img src="~/images/drop-down.png" alt="">
                    </a>
                    <ul class="dropdown-menu" id="countryDropdown">
                        @foreach (var country in Model.Country)
                        {
                            <li value="@country.CountryId"><a class="dropdown-item" value="@country.CountryId">@country.Name</a></li>
                        }
                    </ul>
                </div>
                <!-- city dropdown -->
                <div class="dropdown border-bottom">
                    <a class="text-decoration-none" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        City
                        <img src="~/images/drop-down.png" alt="">
                    </a>
                    <ul class="dropdown-menu" id="cityDropdownOffCanvas">
                    </ul>
                </div>
                <!-- </li> -->
                <!-- theme dropdown  -->
                <!-- <li> -->
                <div class="dropdown border-bottom">
                    <a class="text-decoration-none" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        Theme
                        <img src="~/images/drop-down.png" alt="">
                    </a>
                    <ul class="dropdown-menu" id="themeDropdown">
                        @foreach (var theme in Model.Theme)
                        {
                            <li class="ms-4 form-check">
                                <input type="checkbox" value="@theme.MissionThemeId" class="form-check-input" id="theme_@theme.MissionThemeId" name="themeCheckboxes" multiple>
                                <label class="form-check-label" for="theme_@theme.MissionThemeId">@theme.Title</label>
                            </li>
                        }

                    </ul>
                </div>
                <!-- </li> -->
                <!-- skill dropdown -->

@model CI_Platform.Entities.ViewModels.ShareStoryModel
@{
    Layout = "_headerLayout";
    ViewData["Title"] = "Share Stories";
}
<div class="sharestory">
    <div class="container">
        <h1 class="mt-3 ssheading">Share Your Story</h1>
        <form method="post">
            <div class="row mt-3">
                <div class="col-lg-4 col-md-6 mb-1">

                    <label asp-for="selectMission" class="form-label">Select Mission</label>
<select asp-for="selectMission" class="form-select" aria-label="mission">
    <option value="">select your mission</option>
    @foreach (var mission in Model.missionListByUser)
    {
        <option value="@mission.MissionId">@mission.Title</option>
    }
</select>
<span asp-validation-for="selectMission" class="text-danger"></span>

                </div>
                <div class="col-lg-4 col-md-6 mb-1">

                    <label asp-for="storyTitle" class="form-label">My Story Title</label>
                    <input asp-for="storyTitle" name="storyTitle" type="text" class="form-control" id="storyTitle" aria-describedby="storyTitle">
                        <span asp-validation-for="storyTitle" class="text-danger"></span>



                </div>
                <div class="col-lg-4 col-md-6 mb-1">
                    <label asp-for="Date" class="form-label">Date</label>
<input asp-for="Date" class="form-control" type="date" id="date" value="@DateTime.Today.ToString("yyyy-MM-dd")" aria-describedby="date">
<span asp-validation-for="Date" class="text-danger"></span>
                </div>
            </div>


            <!-------- description text area ------------------>
           <div class="form-group mt-3">
    <label asp-for="Story" class="my-0">My Story</label>
    <textarea class="form-control" id="editor" rows="3" asp-for="Story"></textarea>
    <span asp-validation-for="Story" class="text-danger"></span>
</div>

            <!------------- url section ---------------->

            <div class="mb-3 mt-3">
                <label for="url" class="form-label">Enter Video URL</label>
                <a class="info-button" title="Only Youtube url is valid and You can add multiple urls by pressing enter">i</a>
                <textarea type="url" class="form-control" id="url" aria-describedby="url" rows="1" placeholder="Enter your urls(Youtube Only)"></textarea>
            </div>

            <!---------------- upload images ----------------->
            <div class="upload pb-3">
                <p class="mb-0">Upload your photos</p>
                <div id="dropzone" class="dropzone">
                    <input type="file" class="d-none" accept=".jpg,.png, .jpeg" multiple id="file-input" />
                    <label class="drag-drop mb-4" for="file-input" id="file-button">
                        <img src="~/images/drag-and-drop.png" />
                    </label>
                </div>
                <div id="image-list" class="d-flex">
                    <!-- Selected images will be displayed here -->
                </div>
                <div class="ssbuttons d-flex align-items-center">
                    <button class="btn btn-outline-secondary">Cancel</button>
                    <div class="d-flex align-items-center">
                        <button type="submit" class="card-button mt-0">Save</button>
                        <button type="submit" class="card-button mt-0">Submit</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
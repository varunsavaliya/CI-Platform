@model CI_Platform.Entities.ViewModels.BannerModel

<form class="my-0 row" id="banner-form" method="post" enctype="multipart/form-data">
    <input type="text" class="d-none" asp-for="BannerId" />
    <div class="col-12 my-1">
        <label class="form-label" asp-for="Text">Text</label>
        <textarea asp-for="Text" name="Text" class="form-control" id="Text" aria-describedby="MyProfile" rows="3" placeholder="Enter your text..."></textarea>
        <span asp-validation-for="Text" class="text-danger"></span>
    </div>

    <div class="col-12 my-1">
        <label class="form-label" asp-for="SortOrder">Sort Order</label>
        <input type="number" class="form-control" id="SortOrder" asp-for="SortOrder" placeholder="Enter sort order">
        <span asp-validation-for="SortOrder" class="text-danger"></span>
    </div>

    <div class="col-12 my-1">
        <label class="form-label" asp-for="Image">Image</label>
        <input type="file" class="form-control" id="Image" asp-for="Image" accept=".png, .jpg, .jpeg" placeholder="Choose Banner Image">
        <span asp-validation-for="Image" class="text-danger"></span>
        @if(Model.BannerImageName != null)
        {
            <img id="banner-image-preview-on-edit" src="~/Banners/@Model.BannerImageName" alt="Preview" class="mt-3">

        }
        <img id="banner-image-preview" src="#" alt="Preview" class="mt-3">
    </div>

    <div class="d-flex justify-content-end mt-3">
        <button type="button" class="btn btn-outline-secondary skill-btn" id="admin-cancel-btn">Cancel</button>
        <button type="submit" class="btn mt-0 card-button ms-2 me-0">Save</button>
    </div>
</form>

<!-- for validations -->
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>